{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2023",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
  },
  "ts-node": {
    "typeCheck": false,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}